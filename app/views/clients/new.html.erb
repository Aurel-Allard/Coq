<div id="step-bar">
  <div class="all-steps">
    <div class="step">
      <p>☝</p>
      <h3>1 - Séjour</h3>
    </div>
    <div class="step active-step">
      <p>✌</p>
      <h3>2 - Voyageurs</h3>
    </div>
    <div class="step">
      <p>👏</p>
      <h3>3 - Validation</h3>
    </div>
  </div>
  <div class="price">
    <h4>90€</h4>
  </div>
</div>
<div id="details-banner">
  <div class="client-form">
    <div class="client-form-content">
      <%= simple_form_for [@journey, @client], defaults: { label: false, input_html: { class: 'client-input' } } do |f| %>
        <h2>Mes informations</h2>
        <%= f.input :name, placeholder: "Prénom*", error: 'Nous avons besoin de votre nom :)' %>
        <%= f.input :surname, placeholder: "Nom de famille*", error: 'Votre prénom est nécessaire à la réservation !' %>
        <%= f.input :gender, prompt: "Vous êtes*", collection: ['Une Femme', 'Un Homme'], error: 'Merci de renseigner ce champs' %>
        <%= f.input :address, placeholder: "Adresse*", error: 'Merci de renseigner ce champs', input_html: { id: 'flat_address' }%>
        <%= f.input :birth_date, label: "Date de naissance*" %>
        <%= f.input :mail, placeholder: "email*", error: 'Votre mail est invalide, veuillez réessayer.' %>
        <%= f.input :phone, placeholder: "Téléphone portable*", input_html: { id: 'client-phone' }, error: 'Le format est invalide.' %>
        <%= f.input :contact, label: "Je désire être aussi contacté par sms"%>
        <%= f.submit "SUIVANT", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $("#client-phone").mask("99 99 99 99 99");
  });
</script>

