<div id="step-bar">
  <div class="all-steps">
    <div class="step">
      <p>☝</p>
      <h3>1 - Séjour</h3>
    </div>
    <div class="step">
      <p>✌</p>
      <h3>2 - Voyageurs</h3>
    </div>
    <div class="step active-step">
      <p>👏</p>
      <h3>3 - Validation</h3>
    </div>
  </div>
  <div class="price">
    <h4>90€</h4>
  </div>
</div>
<div id="summary-banner">
  <div class="summary-block">
    <div class="summary-content">
      <h2>Vous partez en week-end !</h2>
      <h3 style="margin-bottom: 10px;"><%= @journey.people_count[/[123456789]/] %> voyageurs au départ de <%= @journey.origin %> le <%= @journey.detail.date %></h3>
      <h3 style="margin-top: 0;"><%= @journey.detail.is_a_surprise ? "Ce séjour est une surprise !" : "" %></h3>
      <h4>Numéro de commande</h4>
      <p>N<%= @journey.id %>LCT</p>
      <h4>Nom de réservation</h4>
      <p><%= @journey.client.gender %> <%= @journey.client.surname %> <%= @journey.client.name %></p>
      <p><%= @journey.client.address %></p>
      <p><%= @journey.client.mail %></p>
      <p><%= @journey.client.phone %></p>
      <h4>Détails</h4>
      <p><%= @journey.detail.housing_type %></p>
      <p><%= @journey.detail.activity_type ? "Activité : " + @journey.detail.activity_type : "Pas d'activité sélectionnée" %></p>
      <% if @journey.detail.points_of_attention %>
        <p>Points d'attentions (promis, on sera vigilants !) :</p>
        <p><%= @journey.detail.points_of_attention %></p>
      <% end %>
      <div class="summary-price">
        <h4>TOTAL</h4>
        <h4>90€</h4>
      </div>
    </div>
  </div>
</div>
