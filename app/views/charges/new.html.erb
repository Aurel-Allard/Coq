<div id="step-bar">
  <div class="all-steps">
    <div class="step">
      <p>☝</p>
      <h3>1 - Séjour</h3>
    </div>
    <div class="step">
      <p>✌</p>
      <h3>2 - Voyageurs</h3>
    </div>
    <div class="step active-step">
      <p>👏</p>
      <h3>3 - Validation</h3>
    </div>
  </div>
  <div class="price">
    <h4><%= @journey.detail.price_cents / 100 %>€</h4>
  </div>
</div>
<div class="empty-steps-div"></div>
<div id="charge-banner">
  <div class="summary-block">
    <div class="summary-content">
      <h2>Vérifications et Paiement</h2>
      <h3 style="margin-bottom: 10px;"><%= @journey.people_count.to_i %> voyageurs au départ de <%= @journey.origin %> le <%= @journey.detail.start_date %></h3>
      <h3 style="margin-top: 0;"><%= @journey.detail.is_a_surprise ? "Ce séjour est une surprise !" : "" %></h3>
      <h4>Numéro de commande</h4>
        <p>N<%= @journey.id %>LCT</p>
      <h4>Nom de réservation</h4>
        <p><%= @journey.user.surname %> <%= @journey.user.name %></p>
        <p><%= @journey.user.address %></p>
        <p><%= @journey.user.email %></p>
        <p><%= @journey.user.phone %></p>
      <h4>Détails</h4>
        <p><%= @journey.detail.housing_type %></p>
        <p><%= @journey.detail.activity_type ? "Activité : " + @journey.detail.activity_type : "Pas d'activité sélectionnée" %></p>
        <% if @journey.detail.points_of_attention %>
          <p>Points d'attentions (promis, on sera vigilants !) :</p>
          <p><%= @journey.detail.points_of_attention %></p>
        <% end %>
      <div class="summary-price">
        <h4>TOTAL</h4>
        <h4><%= @amount / 100 %>€</h4>
      </div>

<!-- Just for testing period -->
      <%= link_to 'Payer', pages_confirmation_path, class: "btn btn-primary btn-banner", style: "text-align: center;" %>
      <% @journey.update(status: "Paid") %>
    </div>
  </div>
</div>

