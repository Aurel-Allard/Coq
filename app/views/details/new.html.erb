<div id="step-bar">
  <div class="all-steps">
    <div class="step active-step">
      <p>☝</p>
      <h3>1 - Séjour</h3>
    </div>
    <div class="step">
      <p>✌</p>
      <h3>2 - Voyageurs</h3>
    </div>
    <div class="step">
      <p>👏</p>
      <h3>3 - Validation</h3>
    </div>
  </div>
  <div class="price">
    <h4>90€</h4>
  </div>
</div>
<div class="empty-form-div"></div>
<div id="details-banner">
  <div class="details-form">
    <div class="details-form-content">
      <h2>Mon séjour</h2>
      <%= simple_form_for [@journey, @detail], defaults: { label: false } do |f| %>
        <h3>Dates</h3>
        <%= f.input :date %>
        <%= f.input :is_a_surprise, label: 'Ce séjour est un cadeau' %>
        <%= f.input :housing_type, prompt: "Type de logement*", collection: ['Nid douillet', 'Hébergement de charme'], error: 'Merci de préciser le type de logement désiré !' %>
        <%= f.input :activity_type, prompt: "Activité (optionnel)*", collection: ['Aucune', 'Sport', 'Gastronomie', 'Culture'], error: 'Veuillez indiquer si vous désirez (ou non !) une activité.' %>
        <h3>Points d'attention*</h3>
        <%= f.input :points_of_attention, placeholder: "Mémé est en Bourgogne, allons ailleurs ... Je viens en couple ... J'ai toujours rêvé de carresser une vache ... Je suis super végan ...", error: 'Merci de préciser vos besoins quant au séjour.', input_html: {:rows => 6} %>
        <%= f.submit "SUIVANT", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<script>
</script>
