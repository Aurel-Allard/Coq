<div id="step-bar">
  <div class="all-steps">
    <div class="step active-step">
      <p>☝</p>
      <h3>1 - Séjour</h3>
    </div>
    <div class="step">
      <p>✌</p>
      <h3>2 - Voyageurs</h3>
    </div>
    <div class="step">
      <p>👏</p>
      <h3>3 - Validation</h3>
    </div>
  </div>
  <div class="price">
    <h4>90€</h4>
  </div>
</div>
<div id="details-banner">
  <div class="details-form">
    <div class="details-form-content">
      <h2>Mon séjour</h2>
      <%= simple_form_for [@journey, @detail] do |f| %>
        <h3>Dates</h3>
        <%= f.input :date, label: false %>
        <%= f.input :is_a_surprise, label: 'Ce séjour est une surprise' %>
        <%= f.input :housing_type, prompt: "Type de logement", label: false, collection: ['Chambre d\'hôte ou hôtel', 'Hôtel de charme'] %>
        <%= f.input :activity_type, prompt: "Activité optionnelle", label: false, collection: ['Sport', 'Gastronomie', 'Culture'] %>
        <h3>Points d'attention</h3>
        <%= f.input :points_of_attention, label: false %>
        <%= f.submit "SUIVANT", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

